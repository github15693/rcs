<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title"><a href="" onclick="goBack()" class="fa fa-reply"></a> <%= t('layout_application.events') %></h3>
        <div class="box-tools pull-right">
          <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          <!--<button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>-->
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div class="row">
          <% unless @event.nil? %>
            <div class="col-md-2">
              <%= image_tag (@all_image.nil? ? 'no-image.jpg' : image_base_url + @all_image[0].image_url_thumb), :class => 'img-thumbnail' %>
            </div>
            <div class="col-md-10">
              <h5><b><%= @event[:name] %></b></h5>
              <h5><%= t 'layouts.homes.date_apply'%><%= DateTime.parse(@event.date).strftime("%d/%m/%Y") if !@event.date.nil? %>  <%= DateTime.parse(@event.event_start).strftime('%H:%M') if !@event.event_start.nil? %> - <%= DateTime.parse(@event.event_end).strftime('%H:%M') if !@event.event_end.nil? %></h5>
              <h5><%= t('events.location') %> <%= @event.location %></h5>
              <span><%= @event.description %></span>
            </div>
          <% end %>
        </div>
          <% unless @all_image.nil? %>
            <div class="row">
              <div class="col-md-12"><h5 style="margin-bottom: 0px;"><%= t('events.click_image_to_slideshow') %></h5></div>
              <%  @all_image.each do |img| %>
              <div class="col-md-2" style="padding-top: 20px;">
                <a href="<%= image_base_url + img.image_url %>">
                  <%= image_tag image_base_url + img.image_url_thumb, {:class => 'img-thumbnail', 'data-smoothzoom' => 'group1', :alt => ''} %>
                </a>
              </div>
            <% end %>
            </div>
          <% end %>

      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>

<style>
  .sz-overlay, .sz-left, .sz-right, .sz-zoomed{
      z-index: 9999;
  }

</style>
<script>
    $(window).load( function() {
        $('img').smoothZoom({
            closeButton: true
        });
    });
</script>