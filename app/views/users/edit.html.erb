<%= form_tag user_path, method: :put do %>
  <div class="form-group">
    <%= label :user, :name %>
    <%= text_field_tag 'user[name]', @user[:name], { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= label :user, :phone %>
    <%= text_field_tag 'user[phone]', @user[:phone], { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= label :user, :email %>
    <%= text_field_tag 'user[email]', @user[:email], { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= label :user, :interest %>
    <%= text_area_tag 'user[interest]', @user[:interest], { class: 'form-control'} %>
  </div>
  <%= hidden_field_tag 'user[:auth_token]', session[:auth_token] %>
  <div class="form-group">
    <%= button_tag t('.submit'), { type: :submit, name: 'user[submit]', value: 'Submit', class: 'btn btn-primary btn-block' } %>
  </div>
<% end %>

