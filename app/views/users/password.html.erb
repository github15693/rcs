<%= form_tag update_password_user_path, method: :put, remote: true do %>
  <div class="form-group">
    <%= label :user, :current_password %>
    <%= text_field :user, :current_password, { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= label :user, :password %>
    <%= text_field :user, :password, { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= label :user, :password_confirmation %>
    <%= text_field :user, :password_confirmation, { class: 'form-control'} %>
  </div>
  <%= hidden_field_tag 'user[auth_token]', session[:auth_token] %>
  <div class="form-group">
    <%= button_tag t('.submit'), { type: :submit, name: 'user[submit]', value: 'Submit', class: 'btn btn-primary btn-block' } %>
  </div>
<% end %>
<%= @class %>

