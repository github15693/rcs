<div class="row">
  <% if !@booking_facilities.nil? %>
      <div class="col-md-12 icon-menu">
        <div class="col-md-1">
          <%= image_tag 'no-image.jpg', class: 'img-thumbnail' %>
        </div>
        <div class="col-md-5">
          <h4><%= t('booking.bookings') %></h4>
        </div>
        <div class="col-md-3 private-dhk text-right">
          <h5><a class="<%= 'glyphicon glyphicon-star-empty font-size-15' if session[:booking_tab] == :facility_booking %>"></a><%= link_to t('booking.book_facilities'), bookings_path, class:"#{session[:booking_tab] == :facility_booking ? 'booking_tab' : ''}" %></h5>
        </div>
        <div class="col-md-3 private-dhk">
          <h5><a class="<%= 'glyphicon glyphicon-star-empty font-size-15' if session[:booking_tab] == :check_booking %>"></a><%= link_to t('booking.check_booking'), bookings_check_booking_path, class:"#{session[:booking_tab] == :check_booking ? 'booking_tab' : ''}" %></h5>
        </div>
      </div>
      <div class="col-md-12">
        <hr>
      </div>
      <% @booking_facilities.each do |bk_fct| %>
          <% unless bk_fct.facilities.blank? %>
              <div class="col-md-12">
                <h4 class="background-title"><%= bk_fct.category %></h4>
              </div>
              <% bk_fct.facilities.each do |fct| %>
                  <div class="col-md-12">
                    <% if bk_fct.facilities.find_index(fct) > 0 && bk_fct.facilities.find_index(fct) < bk_fct.facilities.size %>
                      <hr>
                    <% end %>
                      <div class="col-md-2"><%= image_tag 'no-image.jpg', class: 'img-thumbnail' %></div>
                      <div class="col-md-10">
                        <h4><%= fct.name %></h4>
                        <h5><%= fct.booking_price %></h5>
                        <h5><%= fct.deposit_price %></h5>
                        <div class="text-right"><a class="btn btn-primary" href="<%= booking_path(fct.id)%>"><%= t('booking.book') %></a></div>
                      </div>
                  </div>
              <% end %>
          <% end %>
      <% end %>
  <% else %>
      <h4><%= t('booking.facility_is_empty') %></h4>
  <% end %>
</div>

