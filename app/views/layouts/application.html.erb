<!DOCTYPE html>
<html>
<head>
  <title>Rcs</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Bootstrap theme</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <%= menu_item t('layout_application.my_profile'), '#' %>
          <%= menu_item t('layout_application.setting'), '#' %>
          <%= menu_item t('layout_application.logout'), '#' %>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
  </div>
</div>

<div id="notifications"></div>
<div class="container margin-ttop-50">
  <div class="row content-privileges">
    <div>
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <% if @privileges.size > 0 %>
              <div class="item active">
                <h1>ssgsrg</h1>
              </div>
              <% for i in 1...@privileges.size %>
                  <div class="item">
                    <h1>hsdbfusb</h1>
                  </div>
              <% end %>
          <% else %>
              <div class="item active">
                <h1>no data</h1>
              </div>
          <% end %>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-sm-3 content-left">
      <h4><%= t('layout_application.pmh_park') %></h4>
      <div class='text-center'><%= image_tag 'no-image.jpg' %></div>
      <h4><%= t('layout_application.rcs') %></h4>
      <div class="list-group">
        <%= link_to t('layout_application.home'), '/homes', class:"list-group-item list-group-item-info #{session[:menu] == :homes ? 'active' : ''}"%>
        <%= link_to t('layout_application.bulletins'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.events'), '/events', class:"list-group-item list-group-item-info #{session[:menu] == :events ? 'active' : ''}"%>
        <%= link_to t('layout_application.bookings'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.privileges'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.services'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.courses'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.forms'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.house_rules'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.guard_house'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
        <%= link_to t('layout_application.feedback'), '#', class:"list-group-item list-group-item-info #{session[:menustatus] == 'home' ? 'active' : ''}"%>
      </div>
    </div>
    <div class="col-md-9 col-sm-9 content-right">
      <%= yield %>
    </div>
  </div>
  <div class="row">
    <div class="footer">
      <p>Â© Innoria Company - Project RCS v11082014</p>
    </div>
  </div>
</div>
</body>
</html>
