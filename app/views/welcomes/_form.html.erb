<%= form_tag welcomes_path, remote: true do %>
  <div class="form-group">
    <%= label :user, :choose_condo %>
    <%= collection_select :user, :condo_id, @condos, :first, :last, {}, { class: 'form-control' } %>
  </div>
  <%= label :user, :description %>
  <div class="form-group">
    <%= text_field :user, :name, { class: 'form-control', placeholder: t('.name') } %>
  </div>
  <div class="form-group">
    <%= text_field :user, :email, { class: 'form-control', placeholder: t('.email') } %>
  </div>
  <div class="form-group">
    <%= text_field :user, :phone, { class: 'form-control', placeholder: t('.phone_num') } %>
  </div>
  <div class="form-group">
    <%= text_field :user, :city, { class: 'form-control', placeholder: t('.address') } %>
  </div>
  <div class="form-group">
    <%= password_field :user, :password, { class: 'form-control', placeholder: t('.password') } %>
  </div>
  <div class="form-group">
    <%= password_field :user, :password_confirmation, { class: 'form-control', placeholder: t('.password_confirmation') } %>
  </div>
  <div class="text-center form-group">
    <%= button_tag t('.submit'), { type: :submit, name: 'user[submit]', value: 'Submit', class: 'btn btn-primary btn-block' } %>
  </div>
<% end %>

