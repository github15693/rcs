$('.text-danger').remove()
<% if @user[:status] == 'success' %>
  $('#notifications').html('<%= alert_bs t('.respond_ok') %>')
  $('#user_password_confirmation').closest('form')[0].reset()
<% else %>
  $('#notifications').html('<%= alert_bs t('.respond_not_ok') %>')
  <% @errors.each do |key, value| %>
    $('#user_<%= key %>').after('<%= contextual t(".#{key}") + ' ' + value.last %>')
  <% end %>
<% end %>
setTimeout(function() {
  $('#notifications').html('')
}, 3000)

